@model MonolitoTaller.Models.Entities.Nota

@{
    ViewBag.Title = "Editar Nota";
}

<h2>Editar Nota</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="IdEstudiante"></label>
        <input asp-for="IdEstudiante" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdAsignatura"></label>
        <input asp-for="IdAsignatura" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaRegistro"></label>
        <input asp-for="FechaRegistro" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
