@model MonolitoTaller.Models.Entities.Nota

@{
    ViewBag.Title = "Eliminar Nota";
}

<h2>¿Estás seguro de que deseas eliminar esta nota?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">ID Estudiante</dt>
        <dd class="col-sm-9">@Model.IdEstudiante</dd>

        <dt class="col-sm-3">ID Asignatura</dt>
        <dd class="col-sm-9">@Model.IdAsignatura</dd>

        <dt class="col-sm-3">Nota</dt>
        <dd class="col-sm-9">@Model.Valor</dd>

        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
