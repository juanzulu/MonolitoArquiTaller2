@model MonolitoTaller.Models.Entities.Nota

<h2>Eliminar Nota</h2>

<p>¿Estás seguro que deseas eliminar esta nota?</p>

<ul>
    <li><strong>Estudiante:</strong> @Model.IdEstudiante</li>
    <li><strong>Asignatura:</strong> @Model.IdAsignatura</li>
    <li><strong>Valor:</strong> @Model.Valor</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
