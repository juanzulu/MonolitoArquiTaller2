@model MonolitoTaller.Models.Entities.Nota

@{
    ViewBag.Title = "Registrar Nota";
}

<h2>Registrar Nota</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdEstudiante">ID Estudiante</label>
        <input asp-for="IdEstudiante" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdAsignatura">ID Asignatura</label>
        <input asp-for="IdAsignatura" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Valor">Nota</label>
        <input asp-for="Valor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaRegistro">Fecha</label>
        <input asp-for="FechaRegistro" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
