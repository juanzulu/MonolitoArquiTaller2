@model List<MonolitoTaller.Models.Entities.Nota>

@{
    ViewBag.Title = "Notas Registradas";
}

<h2>Listado de Notas</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar nueva nota</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ID Estudiante</th>
            <th>ID Asignatura</th>
            <th>Nota</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdEstudiante</td>
                <td>@item.IdAsignatura</td>
                <td>@item.Valor</td>
                <td>@item.FechaRegistro.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
