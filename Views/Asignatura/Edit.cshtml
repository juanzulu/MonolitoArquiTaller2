@model MonolitoArquiTaller2.Models.Entities.Asignatura
@{
    ViewBag.Title = "Editar Asignatura";
}

<h2>Editar Asignatura</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(a => a.Id)

    <div class="form-group">
        @Html.LabelFor(a => a.Nombre)
        @Html.TextBoxFor(a => a.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Codigo)
        @Html.TextBoxFor(a => a.Codigo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Creditos)
        @Html.TextBoxFor(a => a.Creditos, new { @class = "form-control", type = "number" })
    </div>

    <button type="submit" class="btn btn-success">Actualizar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
